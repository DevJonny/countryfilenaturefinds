@page "/"

<h1>Spring 2021</h1>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="@TabStyle(ShowShowcase)" href="#" @onclick="@ToggleShowcaseVisibility">Showcase</a>
  </li>
  <li class="nav-item">
    <a class="@TabStyle(!ShowShowcase)" href="#" @onclick="@ToggleShowcaseVisibility">Nature Find List</a>
  </li>
</ul>

@if (ShowShowcase)
{
  <div class="card">
    <div class="card-body">
      <Showcase />
    </div>
  </div>
}
else
{
  <div class="card">
    <div class="card-body">
      <NatureFindList />
    </div>
  </div>
}

@code
{
  bool ShowShowcase { get; set; } = true;

  string TabStyle(bool isActive) => isActive ? "nav-link active" : "nav-link"; 
  void ToggleShowcaseVisibility() => ShowShowcase = !ShowShowcase;
  
}
